#!/bin/sh
# WWW          : https://github.com/wwwsensor/dotfiles
# Author       : @sensor @ss
# Dependencies : paru
#
# Auto setup Spicetify.

N=/dev/null

paru --Sy --noconfirm spotify spicetify-cli spicetify-marketplace-bin &&

mkdir -p ~/.config/spotify &&
touch ~/.config/spotify/prefs &&

doas chgrp wheel -R /opt/spotify &&
doas chown $USER -R /opt/spotify &&

spicetify config custom_apps marketplace
